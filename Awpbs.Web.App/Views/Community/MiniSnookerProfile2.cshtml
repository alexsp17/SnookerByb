@model Awpbs.PersonBasicWebModel

<div class="thumbnail text-center">
    <img src="@Awpbs.ImageUrlHelper.MakeUrlForWebProfile(Model.Picture)" alt="@Model.Name" style="width:150px;height:150px">
    <div class="caption">
        <h3>@Model.Name</h3>
        <p>@Model.Metro</p>
        <p><a href="@BybUrlHelper.BuildPlayerProfileUrl(Model.ID)" class="btn btn-primary" role="button">Profile</a>
    </div>
</div>