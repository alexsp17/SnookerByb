@model Awpbs.PersonBasicWebModel

<div class="thumbnail">
    <img src="@ViewBag.Picture" alt="@Model.Name" style="width:150px;height:150px">
    <div class="caption">
        <h3>@Model.Name</h3>
        @if (ViewBag.ExtraText != null)
        {
            <p>@ViewBag.ExtraText</p>
        }
        <p><a href="~/Players/@Model.ID" class="btn btn-primary" role="button">Profile</a>
    </div>
</div>