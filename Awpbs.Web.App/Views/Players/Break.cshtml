@model Awpbs.Web.App.Models.SnookerBreakModel

<div class="container text-center">
    <div class="row">
        <h1>@Model.Player.Name</h1>
        <div class="caption">
            <p>@Model.Player.Metro</p>
        </div>
        <p>
            <img src="@Awpbs.ImageUrlHelper.MakeUrlForWebProfile(Model.Player.Picture)" alt="@Model.Player.Name" style="width:150px;height:150px">
        </p>

        <div class="container text-center" style="margin-top:10px;margin-bottom:10px;">
            <div class="addthis_sharing_toolbox"></div>
        </div>

        <div class="caption">
            <p>Download Snooker Byb on your mobile to see full profile of this player or invite him/her for a game of snooker.</p>
        </div>
    </div>
</div>

<hr />

<div class="container">
    @Html.Partial("~/Views/Home/_MobileAppsPartial.cshtml")
</div>

<hr />

<div class="container text-center">
    <div class="row">
        <h1>Example player profile in the app</h1>
        <img src="~/Images/screen-profile.png" style="width:400px" />
    </div>
    
</div>
