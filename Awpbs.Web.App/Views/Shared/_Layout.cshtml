<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta property="og:site_name" content="Snooker Byb">
    <meta property="fb:app_id" content="@Config.FacebookAppId">
    <meta property="al:ios:app_store_id" content="1032563817">
    <meta property="al:ios:app_name" content="Snooker Byb">
    <meta property="al:android:package" content="com.bestyourbest.snooker">
    <meta property="al:android:app_name" content="Snooker Byb">
    @RenderSection("SocialMetaData", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <ul class="nav navbar-nav navbar-left">
                <li role="presentation" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        Select a Country<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var country in Awpbs.Country.List)
                        {
                            if (country.Snooker == Awpbs.CountryImportanceEnum.Importance9)
                            {
                                <li><a href="~/@country.UrlName">@country.LocalizedName</a></li>
                            }
                        }
                        <li role="separator" class="divider"></li>
                        <li><a href="~/home/allcountries">All</a></li>
                    </ul>
                </li>
            </ul>
            <div class="navbar-header" style="float:right;">
                @Html.ActionLink(@Awpbs.Web.Config.ProductName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="container-full body-content">
        @RenderBody()
        <hr />
        
        <footer class="text-center" style="margin-bottom:0px; padding-bottom:20px;">
            <div style="padding-top:20px;">
                <h2>Be Your Best.</h2>
                <h2>Best Your Best.</h2>
                <h2>Play Snooker.</h2>
            </div>

            <div style="padding-bottom:20px;">
                <a href="/">
                    <img src="~/Images/logo-special.png" style="height:100px;" />
                </a>
                
            </div>

            <p>&copy; @DateTime.Now.Year - @Awpbs.Web.Config.CompanyName | @Html.ActionLink("About", "About", "Home") | <a href="http://www.snookerbyb.com/AmbassadorProgram">Ambassadors</a> | <a href="/scoreboard">Snooker scoreboard</a>| <a href="/forvenues">For venues</a></p>
        </footer>
    </div>

<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-66621776-1', 'auto');
  ga('send', 'pageview');
</script>

    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-55ee21f089145778" async="async"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
