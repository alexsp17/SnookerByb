<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="Theme.NotificationActivity" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!--- This is our Android theme inhereted from one of the 
        default Android Material Design themes with no Action Bar 
  -->
  <style name="BybTheme" parent="BybTheme.Base">
    <item name="android:typeface">monospace</item>
  </style>

  <style name="BybTheme.Base" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/window_background</item>
    <item name="android:textAppearanceButton">@style/textAppearanceButton</item>
  </style>

  <!--- make sure some of the Android versions don't force button text to be in all caps
        (although apparently it's recommended by Material Design guidelines -->
  <style name="textAppearanceButton" parent="@android:style/TextAppearance.Material.Widget.Button">
      <item name="android:textAllCaps">false</item>
  </style>

</resources>
